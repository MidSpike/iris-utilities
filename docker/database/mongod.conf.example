systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

storage:
  dbPath: /var/lib/mongo
  journal:
    enabled: true

processManagement:
  timeZoneInfo: /usr/share/zoneinfo

net:
  ipv6: true
  port: 27017
  bindIp: 0.0.0.0,:: # All ipv4 and ipv6 interfaces

security:
  authorization: enabled
