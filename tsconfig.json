{
    "defaultSeverity": "error",
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": false,
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "sourceMap": true,
        "declaration": false,
        "typeRoots": [
            "@types",
            "./typings"
        ],
        "paths": {
            "@root/*": [ "src/*" ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src",
        "typings"
    ]
}
